{
    "formatters": {
        "defaultWithStack": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s - \n Function Call: %(functioncall)s - \n Stacktrace: %(Stacktrace)s"
        },
        "default": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },

    "handlers": {
        "debug_file_handler": {
            "level": "DEBUG",
            "name": "DEBUG_LOGGER",
            "filename": "logs/debug.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },
        "info_file_handler": {
            "level": "INFO",
            "name": "INFO_LOGGER",
            "filename": "logs/info.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "error_file_handler": {
            "level": "ERROR",
            "name": "ERROR_LOGGER",
            "filename": "logs/errors.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },
        "critical_file_handler": {
            "level": "CRITICAL",
            "name": "CRITICAL_LOGGER",
            "filename": "logs/critical.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        }
    },
    "root": {
        "level": "INFO",
        "handlers": ["console", "info_file_handler", "error_file_handler"]
    }
}